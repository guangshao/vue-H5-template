@svg 1pxtb {
  height 2px
  @rect {
    fill var(--color, black)
    width 100%
    height 50%
  }
}

@svg 1pxlr{
  width 2px
  @rect {
    fill var(--color, black)
    width 50%
    height 100%
  }
}

border-tb($color){
  border 1px solid transparent
  border-image svg(1pxtb param(--color $color)) 2 2 stretch
}
border-b($color){
  border-top 0px
  border-bottom 1px solid transparent
  border-image svg(1pxtb param(--color $color)) 2 2 stretch
}

border-t($color){
  border-bottom 0px
  border-top 1px solid transparent
  border-image svg(1pxtb param(--color $color)) 2 2 stretch
}

border-r($color){
  border-left 0px
  border-right 1px solid transparent
  border-image svg(1pxlr param(--color $color)) 2 2 stretch
}

border-l($color){
  border-right 0px
  border-left 1px solid transparent
  border-image svg(1pxlr param(--color $color)) 2 2 stretch
}
